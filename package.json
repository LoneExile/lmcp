{
	"name": "lmcp",
	"version": "1.0.0",
	"description": "CLI tool to manage Claude MCP servers - toggle between active and disabled states",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"lmcp": "dist/index.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"lint:fix": "biome check . --fix",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"claude",
		"mcp",
		"cli",
		"ai",
		"anthropic",
		"server-management"
	],
	"author": "LoneExile",
	"license": "MIT",
	"homepage": "https://github.com/loneexile/lmcp",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/loneexile/lmcp.git"
	},
	"bugs": {
		"url": "https://github.com/loneexile/lmcp/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@types/node": "^24.9.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@inquirer/prompts": "^7.9.0",
		"chalk": "^5.6.2",
		"commander": "^14.0.2"
	}
}
